<%= provide(:title, 'Questions and Answers') %>
<div id="ask">
	<h1>Ask a question</h1>


  <% if logged_in? %>
    <%= render 'question_form' %>
  <% else %>
    <p>Please log in to ask or answer questions.</p>
  <% end %>
</div>

<div id="questions">
  <h2>Unsolved Questions</h2>

  <% if @questions.any? %>
  <ul>
    <%= render @questions %>
  </ul>
    <%= will_paginate %>
  <% else %>
    <p>No questions have been asked.</p>
  <% end %>
</div><!-- end questions -->